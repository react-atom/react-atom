{
  "name": "react-atom",
  "version": "independent",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/react-atom/react-atom.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "watch": "lerna run watch --stream",
    "build": "lerna run build",
    "publish-packages": "lerna version -m \"chore: publish %s\" --conventional-commits --create-release github --yes",
    "examples": "yarn --cwd examples start"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
